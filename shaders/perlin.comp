#version 430

layout (binding = 0, rgba32f) uniform image2D outputImage;

layout (local_size_x = 16, local_size_y = 16) in;

void main() {
    ivec2 coord = ivec2(gl_GlobalInvocationID.xy);
    
    // Calc uv coords
    vec2 uv = vec2(float(coord.x) / 512.0, float(coord.y) / 512.0);
    
    // Write uv coords to image
    imageStore(outputImage, coord, vec4(uv, 0.0, 1.0));
}